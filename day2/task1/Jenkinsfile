pipeline {
    agent any
    parameters {
        choice(name: 'ENVIRONMENT', choices: ['dev', 'test', 'prod'], description: 'Select the environment')
        booleanParam(name: 'DEPLOY', defaultValue: false, description: 'Whether to deploy or not')
    }
    stages {
        stage('Logic Check') {
            steps {
                script {
                    echo "Selected Environment: ${params.ENVIRONMENT}"
                    if (params.DEPLOY) {
                        echo "Deployment is ENABLED."
                    } else {
                        echo "Deployment is DISABLED."
                    }
                }
            }
        }
        stage('Deploy') {
            when {
                expression { params.DEPLOY == true }
            }
            steps {
                echo "Deploying to ${params.ENVIRONMENT}..."
            }
        }
    }
}
